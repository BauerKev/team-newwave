<p id="notice"><%= notice %></p>

<center><h3>Cougar Wall Post</h3></center>


  <div class="container">
     <% @posts.each do |post| %>
     <div class="row">
     <div class="col-lg-2"></div>
    <div class="col-lg-8">
        <div class="thumbnail">
        <div class="caption">
          <h3><%= post.title %></h3>
          <p><%= post.content %></p>
          <p style="color:blue;"><%= post.points %>points . <%= post.comments %> comments . <%= post.reports %> reports </p>
          <p>
            <%= link_to 'Show', post %>
            <%= link_to 'Edit', edit_post_path(post) %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
          </p>
          <p>posted by <%= post.username %></p>
        </div>
        </div>
    </div>
    <div class="col-lg-2"></div>
     </div>
     <% end %>
</div>
